  # elif a==2 and b==1:
  #   print("Scissors beats Paper! You win!")

  # Convert the choices to string and concactenate
  c=str(a)+str(b)
  print(c)
  # Draw condition is the same
  if a==b:
    print("It's a draw!")
  #From the outcome code above we can surmise the losing conditions
  elif c=="01" or c=="12"or c=="20":
    print("You Lose!")
