#Code for hurdles with variable placement and height

def turn_right():
    turn_left()
    turn_left()
    turn_left()
    
def down():
    while front_is_clear():
        move()
    else:
        turn_left()
        
def climb():
    while wall_on_right():
        move()
    turn_right()
    move()
    turn_right()
    down()
    
while not at_goal():
    if front_is_clear() and wall_on_right():
        move()
    else:
     
        turn_left()
        climb()
   
    


