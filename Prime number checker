#We define a function to check
def prime_checker(number):
  m=1
#This part checks for how many times the result is zero
  for i in range(1,n):
    if number%i==0:
      m+=1    
#We know that a prime number can only be divided by itself and one
  if m==2 or n==1:
    print("It is a prime number")
  else:
    print("It is not a prime number")

n = int(input("Check this number: "))
prime_checker(number=n)



